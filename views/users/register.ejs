<% layout('layouts/boilerplate') %>
        <div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
                <div class="row container ">
                        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 col-sm-8 ">
                                <div class="card shadow">
                                        <img src="https://images.unsplash.com/photo-1500220959218-81a28e9292d0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80"
                                                alt="Login Photo" class="card-image-top">
                                        <div class="card-body">
                                                <h1>Register!</h1>
                                                <form action="/register" method="post" class="validated-form"
                                                        novalidate>
                                                        <div class="mb-3">
                                                                <label class="form-label"
                                                                        for="username">Username</label>
                                                                <input class="form-control" type="text" id="username"
                                                                        name="username" required>
                                                                <div class="valid-feedback">
                                                                        Looks Good!
                                                                </div>
                                                        </div>
                                                        <div class="mb-3">
                                                                <label class="form-label" for="email">Email</label>
                                                                <input class="form-control" type="email" id="email"
                                                                        name="email" required>
                                                                <div class="valid-feedback">
                                                                        Looks Good!
                                                                </div>
                                                        </div>
                                                        <div class="mb-3">
                                                                <label class="form-label"
                                                                        for="password">Password</label>
                                                                <input class="form-control" type="password"
                                                                        id="password" name="password" required>
                                                                <div class="valid-feedback">
                                                                        Looks Good!
                                                                </div>
                                                        </div>
                                                        <div class="d-grid gap-2">
                                                                <button class="btn btn-success">Register</button>
                                                        </div>
                                                </form>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>